<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ResourceBase">
    <defName>NECIron</defName>
    <label>iron ore</label>
    <description>Raw iron which must be forged with coal (or charcoal) into steel. Iron is soft and reacts to oxygen and corrodes easily.</description>
    <graphicData>
      <texPath>IronOre</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>0.9</MarketValue>
      <Mass>0.5</Mass>
      <StuffPower_Armor_Sharp>0.6</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.45</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.65</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.85</SharpDamageMultiplier>
      <BluntDamageMultiplier>1</BluntDamageMultiplier>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <deepCommonality>4</deepCommonality>
    <deepCountPerPortion>35</deepCountPerPortion>
    <deepLumpSizeRange>
      <min>20</min>
      <max>40</max>
    </deepLumpSizeRange>
    <burnableByRecipe>false</burnableByRecipe>
    <smeltable>true</smeltable>
    <stuffProps>
      <stuffAdjective>iron</stuffAdjective>
      <categories>
        <li>Metallic</li>
      </categories>
      <commonality>1.00</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(140,140,140)</color>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>1</MaxHitPoints>
        <Beauty>0.8</Beauty>
        <Flammability>0</Flammability>
      </statFactors>
    </stuffProps>
  </ThingDef>
</Defs>