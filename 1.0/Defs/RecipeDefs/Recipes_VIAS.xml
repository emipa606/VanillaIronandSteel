<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RecipeDef>
    <defName>NECForgeSteel</defName>
    <label>forge iron into steel</label>
    <description>Forge iron ore into hardened workable steel with a little coal or charcoal.</description>
    <jobString>Refining steel from iron ore.</jobString>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <workAmount>720</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <workSkillLearnFactor>0.25</workSkillLearnFactor>
    <targetCountAdjustment>10</targetCountAdjustment>
    <allowMixingIngredients>false</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs />
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>NECIron</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>NECIron</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Steel>10</Steel>
    </products>
    <recipeUsers>
      <li>NECBloomery</li>
      <li>FueledSmithy</li>
      <li>ElectricSmithy</li>
    </recipeUsers>
  </RecipeDef>
